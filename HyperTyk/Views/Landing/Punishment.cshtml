
@{
    ViewBag.Title = "Punishment Policy - HyperFyp";
    Layout = "~/Views/Landing/_LandingLayout.cshtml";
}

<style>
    .box {
        position: relative;
        width: 90%;
        max-width: 900px;
        margin: 5%;
        font-family: 
            , sans-serif;
        display: flex;
        justify-content: center;
        color: #2f2f2f;
        font-size: 1rem;
    }

        .box .box-box {
            padding: 40px;
            background-color: #ffffffe3;
            border-radius: 15px;
            display: flex;
            flex-direction: column;
            gap: 25px;
            backdrop-filter: blur(14px);
        }

            .box .box-box .box-box-box {
                display: flex;
                flex-direction: column;
