<script>
    const socialMediaPlatforms = [
        { name: 'Facebook!' },
        { name: 'TikTok!' },
        { name: 'Instagram!' }
    ];

    const typingElement = document.getElementById('typing');
    let currentPlatformIndex = 0;
    let currentLetterIndex = 0;
    let isDeleting = false;

    function typePlatforms() {
        const platform = socialMediaPlatforms[currentPlatformIndex];
        const platformName = platform.name;

        const fullText = isDeleting ? platformName.slice(0, currentLetterIndex) : platformName.slice(0, currentLetterIndex + 1);

        typingElement.innerHTML = `${fullText}`;

        if (!isDeleting && currentLetterIndex === platformName.length) {
            isDeleting = true;
            setTimeout(typePlatforms, 1500); // Wait after typing complete
        } else if (isDeleting && currentLetterIndex === 0) {
            isDeleting = false;
            currentPlatformIndex = (currentPlatformIndex + 1) % socialMediaPlatforms.length;
            setTimeout(typePlatforms, 500); // Delay before typing next platform
        } else {
            setTimeout(typePlatforms, isDeleting ? 100 : 300); // Typing speed: 200 milliseconds, Deleting speed: 100 milliseconds
        }

        currentLetterIndex = isDeleting ? currentLetterIndex - 1 : currentLetterIndex + 1;
    }

    typePlatforms();
</script>