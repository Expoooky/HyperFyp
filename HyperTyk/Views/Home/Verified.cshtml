
@{
    ViewBag.Title = "Verification Success!";
    Layout = "~/Views/Landing/_LandingLayout.cshtml";
}
<style>
    .verified {
        width: 100%;
        height: 85vh;
    }

    .success {
        display: flex;
        align-items: center;
        text-align: center;
        flex-direction: column;
        position: absolute;
        font-family: 'League Spartan', sans-serif;
        top: 55%;
        left: 50%;
        transform: translate(-50%, -50%);
        padding: 40px;
        border-radius: 15px;
        background-color: #ffffffff;
        color: #000000ff;
    }

        .success i {
            padding: 10px;
            border-radius: 50%;
            background-color: #50d717ff;
            font-size: 100px;
            color: #fff;
            margin-bottom: 50px;
        }

    .active {
        display: none;
    }
</style>
<div class="verified">
    <div class="success">
        <i class='bx bx-check'></i>
        <h1>Verified!</h1>
        <h3>Yahoo! You have successfully verified your account!</h3>

        <ul class="nav-links">
            <li>
                <button class="cssbuttons-io-button" onclick="window.location.href='/Login'">
                    Dashboard
                    <div class="icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house-door-fill" viewBox="0 0 16 16">
                            <path d="M6.5 14.5v-3.505c0-.245.25-.495.5-.495h2c.25 0 .5.25.5.5v3.5a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5" />
                        </svg>
                    </div>
                </button>
            </li>
        </ul>
    </div>
</div>
<script>
    window.addEventListener('load', function () {
        const dashboardLink = document.getElementById('links');
        if (dashboardLink) {
            dashboardLink.classList.add('active');
        }
    });
</script>

